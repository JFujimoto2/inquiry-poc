<h1 class="text-2xl font-bold mb-6">予約作成</h1>
<% if @inquiry %>
  <div class="bg-blue-50 border border-blue-200 rounded p-4 mb-6">
    <p class="font-medium">問い合わせ #<%= @inquiry.id %> から予約を作成</p>
    <p><%= @inquiry.company_name %> - <%= @inquiry.facility.name %> - <%= @inquiry.desired_date %></p>
  </div>
  <%= button_to "問い合わせから予約を作成",
      admin_reservations_path(inquiry_id: @inquiry.id),
      class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% else %>
  <%= render "form", reservation: @reservation %>
<% end %>
<div class="mt-4">
  <%= link_to "戻る", admin_reservations_path, class: "text-blue-600 hover:underline" %>
</div>
