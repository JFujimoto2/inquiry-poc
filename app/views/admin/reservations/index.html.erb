<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Reservations</h1>
</div>

<div class="mb-6 flex gap-2">
  <%= link_to "All", admin_reservations_path, class: "px-3 py-1 rounded #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-gray-200'}" %>
  <% Reservation::STATUSES.each do |status| %>
    <%= link_to status.titleize, admin_reservations_path(status:), class: "px-3 py-1 rounded #{params[:status] == status ? 'bg-blue-600 text-white' : 'bg-gray-200'}" %>
  <% end %>
</div>

<table class="w-full bg-white shadow rounded">
  <thead class="bg-gray-100">
    <tr>
      <th class="text-left p-3">ID</th>
      <th class="text-left p-3">Facility</th>
      <th class="text-left p-3">Customer</th>
      <th class="text-left p-3">Check-in</th>
      <th class="text-left p-3">People</th>
      <th class="text-left p-3">Status</th>
      <th class="text-left p-3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr class="border-t">
        <td class="p-3"><%= reservation.id %></td>
        <td class="p-3"><%= reservation.facility.name %></td>
        <td class="p-3"><%= reservation.customer.company_name %></td>
        <td class="p-3"><%= reservation.check_in_date %></td>
        <td class="p-3"><%= reservation.num_people %></td>
        <td class="p-3">
          <span class="px-2 py-1 rounded text-sm <%= reservation_status_class(reservation.status) %>">
            <%= reservation.status.titleize %>
          </span>
        </td>
        <td class="p-3">
          <%= link_to "Show", admin_reservation_path(reservation), class: "text-blue-600 hover:underline mr-2" %>
          <%= link_to "Edit", edit_admin_reservation_path(reservation), class: "text-blue-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
