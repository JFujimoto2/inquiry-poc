<div class="bg-white shadow rounded p-6">
  <h1 class="text-2xl font-bold mb-4"><%= @facility.name %></h1>

  <dl class="space-y-2">
    <dt class="font-medium text-gray-600">Sender Email</dt>
    <dd class="mb-3"><%= @facility.sender_email %></dd>

    <dt class="font-medium text-gray-600">Sender Domain</dt>
    <dd class="mb-3"><%= @facility.sender_domain %></dd>

    <dt class="font-medium text-gray-600">Email Signature</dt>
    <dd class="mb-3 whitespace-pre-wrap"><%= @facility.email_signature %></dd>
  </dl>

  <div class="mt-6 flex space-x-4">
    <%= link_to "Edit", edit_admin_facility_path(@facility), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= button_to "Delete", admin_facility_path(@facility), method: :delete,
        data: { turbo_confirm: "Are you sure?" },
        class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
    <%= link_to "Back", admin_facilities_path, class: "text-blue-600 hover:underline self-center" %>
  </div>
</div>
