<%= form_with(model: [:admin, price_master], class: "space-y-4") do |form| %>
  <% if price_master.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul>
        <% price_master.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :facility_id, "施設", class: "block font-medium mb-1" %>
    <%= form.collection_select :facility_id, Facility.order(:name), :id, :name, {}, class: "border rounded p-2" %>
  </div>

  <div>
    <%= form.label :item_type, "項目種別", class: "block font-medium mb-1" %>
    <%= form.select :item_type, PriceMaster::ITEM_TYPES.map { |t| [t.titleize, t] }, {}, class: "border rounded p-2" %>
  </div>

  <div>
    <%= form.label :day_type, "日種別", class: "block font-medium mb-1" %>
    <%= form.select :day_type, PriceMaster::DAY_TYPES.map { |t| [t.titleize, t] }, {}, class: "border rounded p-2" %>
  </div>

  <div>
    <%= form.label :unit_price, "単価", class: "block font-medium mb-1" %>
    <%= form.number_field :unit_price, min: 0, class: "border rounded p-2" %>
  </div>

  <div>
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
