<div class="bg-white shadow rounded p-6">
  <h1 class="text-2xl font-bold mb-4">メールテンプレート: <%= @email_template.facility.name %></h1>

  <dl class="space-y-2">
    <dt class="font-medium text-gray-600">件名</dt>
    <dd class="mb-3"><%= @email_template.subject %></dd>

    <dt class="font-medium text-gray-600">本文</dt>
    <dd class="mb-3 whitespace-pre-wrap bg-gray-50 p-3 rounded"><%= @email_template.body %></dd>
  </dl>

  <div class="mt-6 flex space-x-4">
    <%= link_to "プレビュー", preview_admin_email_template_path(@email_template), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    <%= link_to "編集", edit_admin_email_template_path(@email_template), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to "戻る", admin_email_templates_path, class: "text-blue-600 hover:underline self-center" %>
  </div>
</div>
