<h1 class="text-2xl font-bold mb-6">Email Template Preview</h1>

<div class="bg-white shadow rounded p-6">
  <div class="border-b pb-3 mb-3">
    <span class="font-medium text-gray-600">Subject:</span>
    <span class="ml-2"><%= @preview_subject %></span>
  </div>

  <div>
    <span class="font-medium text-gray-600">Body:</span>
    <div class="mt-2 whitespace-pre-wrap bg-gray-50 p-4 rounded"><%= @preview_body %></div>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Back", admin_email_template_path(@email_template), class: "text-blue-600 hover:underline" %>
</div>
