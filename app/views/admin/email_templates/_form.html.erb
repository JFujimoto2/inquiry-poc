<%= form_with(model: [:admin, email_template], class: "space-y-4") do |form| %>
  <% if email_template.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul>
        <% email_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :facility_id, "施設", class: "block font-medium mb-1" %>
    <%= form.collection_select :facility_id, Facility.order(:name), :id, :name, {}, class: "border rounded p-2" %>
  </div>

  <div>
    <%= form.label :subject, "件名", class: "block font-medium mb-1" %>
    <%= form.text_field :subject, class: "w-full border rounded p-2" %>
  </div>

  <div>
    <%= form.label :body, "本文", class: "block font-medium mb-1" %>
    <%= form.text_area :body, rows: 10, class: "w-full border rounded p-2" %>
  </div>

  <div class="bg-gray-100 p-3 rounded text-sm">
    <p class="font-medium mb-1">利用可能な変数:</p>
    <code><%= Admin::EmailTemplatesController::TEMPLATE_VARIABLES.map { |v| "{{#{v}}}" }.join(", ") %></code>
  </div>

  <div>
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
