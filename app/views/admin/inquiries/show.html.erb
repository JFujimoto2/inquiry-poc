<div class="bg-white shadow rounded p-6">
  <h1 class="text-2xl font-bold mb-4">問い合わせ #<%= @inquiry.id %></h1>

  <dl class="space-y-2">
    <dt class="font-medium text-gray-600">施設</dt>
    <dd class="mb-3"><%= @inquiry.facility.name %></dd>

    <dt class="font-medium text-gray-600">会社名</dt>
    <dd class="mb-3"><%= @inquiry.company_name %></dd>

    <dt class="font-medium text-gray-600">担当者</dt>
    <dd class="mb-3"><%= @inquiry.contact_name %></dd>

    <dt class="font-medium text-gray-600">メールアドレス</dt>
    <dd class="mb-3"><%= @inquiry.email %></dd>

    <dt class="font-medium text-gray-600">利用開始日</dt>
    <dd class="mb-3"><%= @inquiry.desired_date %></dd>

    <dt class="font-medium text-gray-600">利用終了日</dt>
    <dd class="mb-3"><%= @inquiry.desired_end_date %></dd>

    <dt class="font-medium text-gray-600">利用人数</dt>
    <dd class="mb-3"><%= @inquiry.num_people %></dd>

    <dt class="font-medium text-gray-600">合計金額</dt>
    <dd class="mb-3"><%= @inquiry.total_amount ? number_to_currency(@inquiry.total_amount, unit: "¥", precision: 0) : "-" %></dd>

    <dt class="font-medium text-gray-600">見積ステータス</dt>
    <dd class="mb-3"><%= @inquiry.quote ? quote_status_label(@inquiry.quote.status) : "-" %></dd>

    <% if @inquiry.customer %>
      <dt class="font-medium text-gray-600">顧客</dt>
      <dd class="mb-3"><%= link_to @inquiry.customer.company_name, admin_customer_path(@inquiry.customer), class: "text-blue-600 hover:underline" %></dd>
    <% end %>
  </dl>

  <div class="mt-6 flex space-x-4">
    <% if @inquiry.reservation %>
      <%= link_to "予約を表示", admin_reservation_path(@inquiry.reservation), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    <% else %>
      <%= link_to "予約を作成", new_admin_reservation_path(inquiry_id: @inquiry.id), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    <% end %>
    <%= link_to "戻る", admin_inquiries_path, class: "text-blue-600 hover:underline self-center" %>
  </div>
</div>
