<%= form_with(model: [:admin, customer], class: "space-y-4") do |form| %>
  <% if customer.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :company_name, class: "block font-medium mb-1" %>
    <%= form.text_field :company_name, class: "w-full border rounded p-2" %>
  </div>

  <div>
    <%= form.label :contact_name, class: "block font-medium mb-1" %>
    <%= form.text_field :contact_name, class: "w-full border rounded p-2" %>
  </div>

  <div>
    <%= form.label :email, class: "block font-medium mb-1" %>
    <%= form.email_field :email, class: "w-full border rounded p-2" %>
  </div>

  <div>
    <%= form.label :phone, class: "block font-medium mb-1" %>
    <%= form.telephone_field :phone, class: "w-full border rounded p-2" %>
  </div>

  <div>
    <%= form.label :notes, class: "block font-medium mb-1" %>
    <%= form.text_area :notes, rows: 4, class: "w-full border rounded p-2" %>
  </div>

  <div>
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
