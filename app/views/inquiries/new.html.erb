<div class="max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Inquiry Form</h1>

  <%= form_with(model: @inquiry, class: "space-y-4", data: { controller: "inquiry-form" }) do |form| %>
    <% if @inquiry.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :facility_id, "Facility", class: "block font-medium mb-1" %>
      <%= form.collection_select :facility_id, @facilities, :id, :name,
          { prompt: "Select a facility" }, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= form.label :desired_date, class: "block font-medium mb-1" %>
      <%= form.date_field :desired_date, class: "border rounded p-2" %>
    </div>

    <div>
      <%= form.label :num_people, "Number of People", class: "block font-medium mb-1" %>
      <%= form.number_field :num_people, min: 1, class: "border rounded p-2" %>
    </div>

    <fieldset class="space-y-2">
      <legend class="font-medium">Services</legend>

      <div>
        <%= form.check_box :conference_room, class: "mr-2" %>
        <%= form.label :conference_room, "Conference Room" %>
      </div>

      <div>
        <%= form.check_box :accommodation, class: "mr-2",
            data: { action: "change->inquiry-form#toggleBreakfast", inquiry_form_target: "accommodation" } %>
        <%= form.label :accommodation, "Accommodation" %>
      </div>

      <div data-inquiry-form-target="breakfastWrapper" class="<%= 'hidden' unless @inquiry.accommodation? %>">
        <%= form.check_box :breakfast, class: "mr-2" %>
        <%= form.label :breakfast, "Breakfast" %>
      </div>

      <div>
        <%= form.check_box :lunch, class: "mr-2" %>
        <%= form.label :lunch, "Lunch" %>
      </div>

      <div>
        <%= form.check_box :dinner, class: "mr-2" %>
        <%= form.label :dinner, "Dinner" %>
      </div>
    </fieldset>

    <div>
      <%= form.label :company_name, class: "block font-medium mb-1" %>
      <%= form.text_field :company_name, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= form.label :contact_name, class: "block font-medium mb-1" %>
      <%= form.text_field :contact_name, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= form.label :email, class: "block font-medium mb-1" %>
      <%= form.email_field :email, class: "w-full border rounded p-2" %>
    </div>

    <div>
      <%= form.submit "Submit Inquiry",
          class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
