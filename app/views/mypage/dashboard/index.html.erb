<h1 class="text-2xl font-bold mb-6">予約一覧</h1>

<% if @reservations.any? %>
  <div class="space-y-4">
    <% @reservations.each do |reservation| %>
      <div class="bg-white shadow rounded p-4">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="font-medium text-lg"><%= reservation.facility.name %></h3>
            <p class="text-gray-600">
              チェックイン: <%= reservation.check_in_date %>
              <% if reservation.check_out_date %>
                - チェックアウト: <%= reservation.check_out_date %>
              <% end %>
            </p>
            <p class="text-gray-600">人数: <%= reservation.num_people %></p>
          </div>
          <div class="text-right">
            <span class="px-2 py-1 rounded text-sm <%= reservation_status_class(reservation.status) %>">
              <%= reservation_status_label(reservation.status) %>
            </span>
            <div class="mt-2">
              <%= link_to "詳細", mypage_reservation_path(reservation), class: "text-blue-600 hover:underline" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500">予約はまだありません。</p>
<% end %>
