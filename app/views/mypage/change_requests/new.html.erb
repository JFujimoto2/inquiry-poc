<div class="max-w-lg mx-auto">
  <h1 class="text-2xl font-bold mb-6">変更リクエスト</h1>
  <p class="mb-4 text-gray-600">予約 #<%= @reservation.id %> - <%= @reservation.facility.name %></p>

  <%= form_with(model: @change_request, url: mypage_reservation_change_requests_path(@reservation), class: "space-y-4") do |form| %>
    <% if @change_request.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @change_request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :request_details, "変更内容", class: "block font-medium mb-1" %>
      <%= form.text_area :request_details, rows: 6, class: "w-full border rounded p-2",
          placeholder: "変更したい内容を記入してください..." %>
    </div>

    <div>
      <%= form.submit "リクエスト送信", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "予約に戻る", mypage_reservation_path(@reservation), class: "text-blue-600 hover:underline" %>
  </div>
</div>
