<div class="max-w-md mx-auto mt-16">
  <div class="bg-white shadow rounded p-8">
    <h1 class="text-2xl font-bold mb-6 text-center">Mypage Login</h1>

    <%= form_with url: mypage_session_path, method: :post, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email, "Email Address", class: "block font-medium mb-1" %>
        <%= form.email_field :email, class: "w-full border rounded p-2", required: true, autofocus: true %>
      </div>

      <div>
        <%= form.submit "Send Login Link", class: "w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-4 text-sm text-gray-500 text-center">
      We'll send you a magic link to log in.
    </p>
  </div>
</div>
