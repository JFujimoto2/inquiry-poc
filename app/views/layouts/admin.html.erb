<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - Inquiry System" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <nav class="bg-gray-800 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-6">
          <span class="font-bold text-lg">Admin</span>
          <%= link_to "Dashboard", admin_root_path, class: "hover:text-gray-300" %>
          <%= link_to "Inquiries", admin_inquiries_path, class: "hover:text-gray-300" %>
          <%= link_to "Reservations", admin_reservations_path, class: "hover:text-gray-300" %>
          <%= link_to "Customers", admin_customers_path, class: "hover:text-gray-300" %>
          <%= link_to "Facilities", admin_facilities_path, class: "hover:text-gray-300" %>
          <%= link_to "Calendar", admin_calendar_types_path, class: "hover:text-gray-300" %>
          <%= link_to "Prices", admin_price_masters_path, class: "hover:text-gray-300" %>
          <%= link_to "Email Templates", admin_email_templates_path, class: "hover:text-gray-300" %>
        </div>
        <div>
          <%= button_to "Logout", session_path, method: :delete, class: "hover:text-gray-300 bg-transparent border-0 cursor-pointer text-white" %>
        </div>
      </div>
    </nav>

    <main class="container mx-auto mt-8 px-5">
      <% if notice.present? %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= notice %>
        </div>
      <% end %>
      <% if alert.present? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= alert %>
        </div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
